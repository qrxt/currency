  "network": {
    "requestUrlBase": "http://localhost:3000",
    "endpoints": {
      "getSymbols": {
        "path": "/exchangerates_data/symbols",
        "method": "GET"
      },
      "getConversionResult": {
        "path": "/exchangerates_data/convert?to={to}&from={from}&amount={amount}",
        "method": "GET"
      },
      "getCurrencyTimeSeries": {
        "path": "/exchangerates_data/timeseries?start_date={startDate}&end_date={endDate}&base={base}&symbols={symbol}",
        "method": "GET"
      }
    }
  },
